<header>
    <h1>Bienvenue sur ma page d'accueil</h1>
</header>
<div class="shadow mt-5 p-5 bg-light">
  <h2>Liste des utilisateurs</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr class="bg-primary">
        <th scope="col">#</th>
        <th scope="col">Username</th>
        <th scope="col">Bio</th>
        <th scope="col" colspan="2" style="text-align:center;">Action</th>
      </tr>
    </thead>
    <tbody>

      <%=%>
    
      <% @users.each do |u| %>
      <tr>
        <th scope="row"><%= u.id%></th>
        <td><%= u.username%></td>
        <td><%= u.bio%></td>
        <td colspan="2" style="text-align:center;">
            <a class="btn btn-outline-success my-2 my-sm-0" href="/user/<%= u.id%>">Voir</a>
            <a class="btn btn-outline-danger my-2 my-sm-0" href="/user/delete/<%= u.id%>">Supprimer</button>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>